{% extends 'layout.twig' %}
{% import 'form.twig' as form %}
{% block head %}
	<title>Add an article</title>
{% endblock %}

{% block content %}
    <h1>Add an article</h1><br>

<form action="" method="post">
	{{ form.input('title', 'Title')  }}
        {{ form.textarea('callToRead', 'Call to read') }}
	{{ form.input('author', 'Author') }}
	{{ form.textarea('content', 'Content') }}
        {{ form.file('image', 'Browse featured image')}}
        <div class="form-group"><br>
		<button type="submit" class="btn btn-success">Post the article</button>
	</div>
</form>
        
{% endblock %}