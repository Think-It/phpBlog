{% extends 'layout.twig' %}

{% block head %}
	<title>Edit post</title>
{% endblock %}

{% block content %}
	<h1>Edit post</h1>

<form action="?p=editpost" method="post">
	{{ form.input('title', 'Title of the post') }}
	{{ form.input('author', 'Name of the author') }}
	{{ form.textarea('Content', 'The content') }}
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
</form>

{% endblock	%}